<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/fondo"
    tools:context=".app">
    <ScrollView
        android:layout_height="match_parent"

        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="115dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"



                android:layout_height="280dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Cardview1"
                        android:layout_width="match_parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="matrix"

                        android:layout_height="110dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/Titulo"
                        android:layout_width="match_parent"
                        android:text="@string/FFVII"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@+id/Cardview1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/Titulo"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/grey"
                        android:layout_marginRight="8dp"
                        android:text="@string/FFDesc"
                        android:layout_height="wrap_content">

                    </TextView>
                    <Button
                        android:id="@+id/butFFVII"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/desc"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="11dp"
                        android:text="@string/verWiki"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_marginBottom="13dp"
                        android:backgroundTint="@color/Rojo"
                        android:layout_height="wrap_content">

                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"



                android:layout_height="290dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Cardview2"
                        android:layout_width="match_parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="matrix"

                        android:layout_height="110dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/Titulo2"
                        android:layout_width="match_parent"
                        android:text="@string/DBS"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@+id/Cardview2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/Titulo2"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/grey"
                        android:layout_marginRight="8dp"
                        android:text="@string/DBSdesc"
                        android:layout_height="wrap_content">

                    </TextView>
                    <Button
                        android:id="@+id/butDBS"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/desc2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="11dp"
                        android:text="@string/verWiki"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/Rojo"
                        android:layout_height="wrap_content">

                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"



                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Cardview4"
                        android:layout_width="match_parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="matrix"

                        android:layout_height="110dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/Titulo4"
                        android:layout_width="match_parent"
                        android:text="@string/FFX"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@+id/Cardview4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/desc4"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/Titulo4"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/grey"
                        android:layout_marginRight="8dp"
                        android:text="@string/FFXdesc"
                        android:layout_height="wrap_content">

                    </TextView>
                    <Button
                        android:id="@+id/butFFX"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/desc4"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="11dp"
                        android:text="@string/verWiki"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_marginBottom="13dp"
                        android:backgroundTint="@color/Rojo"
                        android:layout_height="wrap_content">

                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"



                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Cardview3"
                        android:layout_width="match_parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="matrix"

                        android:layout_height="110dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/Titulo3"
                        android:layout_width="match_parent"
                        android:text="@string/RE4"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@+id/Cardview3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/Titulo3"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/grey"
                        android:layout_marginRight="8dp"
                        android:text="@string/RE4desc"
                        android:layout_height="wrap_content">

                    </TextView>
                    <Button
                        android:id="@+id/butRE4"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/desc3"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="11dp"
                        android:text="@string/verWiki"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_marginBottom="13dp"
                        android:backgroundTint="@color/Rojo"
                        android:layout_height="wrap_content">

                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/botonAppBar"
        android:layout_width="match_parent"
        app:fabAlignmentMode="end"
        app:fabCradleMargin="13dp"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:textStyle=""
                android:text="@string/bottom_app_bar"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_height="match_parent">

            </TextView>
    </com.google.android.material.bottomappbar.BottomAppBar>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/fab"
        app:layout_anchor="@id/botonAppBar"
        android:src="@drawable/plus_sign"
        app:tint="@color/white"
        android:backgroundTint="@color/Rojo"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>